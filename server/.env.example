# Server Configuration
NODE_ENV=development
PORT=3001

# Supabase Configuration
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Physics Configuration
PHYSICS_TICK_RATE=60              # Server physics simulation rate (FPS)
BROADCAST_TICK_RATE=20            # Client update broadcast rate (Hz)

# Room Configuration
MAX_PLAYERS_PER_ROOM=8
MAX_DICE_PER_ROOM=32
ROOM_IDLE_TIMEOUT=300000          # 5 minutes in milliseconds
ROOM_CLEANUP_INTERVAL=60000       # 1 minute in milliseconds

# Security
BCRYPT_ROUNDS=10
MAX_ROOMS_PER_IP=3                # Prevent spam
RATE_LIMIT_WINDOW=60000           # 1 minute
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info                    # debug, info, warn, error
LOG_PHYSICS_STATS=false           # Log tick times and performance
